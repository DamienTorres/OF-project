    (3 0.5 0)      // Vertex 4: Outlet, top right of block 2
    (3 0 0)        // Vertex 5: Outlet, bottom right of block 2
    (0 1 0)        // Vertex 6: Inlet, top left
    (1 1 0)        // Vertex 7: Start of ramp, top right of block 0
